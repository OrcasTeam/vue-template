{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"baseUrl": "./",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"isolatedModules": true,
		"removeComments": true,
		"jsx": "preserve",
		"jsxFactory": "h",
		"experimentalDecorators": true,
		"strictFunctionTypes": true,
		"resolveJsonModule": true,
		"declaration": false,
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["src/*"]
		},
		"sourceMap": false,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"types": ["node", "vite/client", "vitest/globals", "@mwjz/utils/globals"],
		"typeRoots": ["node_modules/@types"],
	},
	"exclude": ["node_modules", "build", "src/asset/json/*.json", "src/**/script"],
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/shims-import.d.ts",
		"test/**/*.ts"
	]
}
