{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "isolatedModules": false,
    "removeComments": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "experimentalDecorators": true,
    "strictFunctionTypes": true,
    "resolveJsonModule": true,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "asset/*":                ["src/asset/*"],
      "hook/*":                 ["src/hook/*"],
      "plugin/*":               ["src/plugin/*"],
      "page/*":                 ["src/page/*"],
      "router/*":               ["src/router/*"],
      "service/*":              ["src/service/*"],
      "util/*":                 ["src/util/*"],
      "store/*":                ["src/store/modules/*"],
      "component/*":            ["src/component/modules/*"],
      "directive/*":            ["src/directive/modules/*"],
      "@/*":                    ["src/*"]
    },
    "sourceMap": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node", "vite/client", "vitest/globals"],
    "typeRoots": ["node_modules/@types", "src", "type"],
    "lib": ["dom", "esnext", "dom.iterable"]
  },
  "exclude": ["node_modules", "build", "src/asset/json/*.json"],
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "type/**/*.d.ts",
    "test/**/*.ts"
  ]
}